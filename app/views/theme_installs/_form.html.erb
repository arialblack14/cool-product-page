<%= form_with(model: theme_install, local: true) do |form| %>
  <% if theme_install.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(theme_install.errors.count, "error") %> prohibited this theme_install from being saved:</h2>

      <ul>
      <% theme_install.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%=# form.label :shop_id %>
    <%=3 form.number_field :shop_id, id: :theme_install_shop_id %>
  </div>

  <div class="field">
    <%=# form.label :shop_domain %>
    <%=# form.text_field :shop_domain, id: :theme_install_shop_domain %>
  </div>

  <div class="field">
    <%= # form.label :theme_id %>
    <%= # form.number_field :theme_id, id: :theme_install_theme_id %>

    <strong>Themes</strong>
    <ul>
    <% @shop_themes.each do |theme| %>
      <li>
        <label for="<%= "theme_id_#{theme.id}" %>">
          <%= form.radio_button :theme_id, theme.id, theme.role == "main" ? true : false, id: "theme_id_#{theme.id}" %>
  
          <span><%= theme.name %><%= " (Current Theme)" if theme.role == "main" %></span>
        </label>
      </li>
    <% end %>
  </ul>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
